<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="page-header">
        <h1>案件一覧</h1>
      </div>
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Client</th>
            <th>Subject</th>
            <th>Status</th>
            <th>Delivery</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <tbody>
        <% @items.each do |item| %>
        <% if (item.delivery - Date.today) > 14 %>
          <tr class="success">
        <% elsif (item.delivery - Date.today) > 7 %>
          <tr class="warning">
        <% else %>
          <tr class="danger">
        <% end %>
            <td><%= item.client %></td>
            <td><%= item.subject %></td>
            <td><%= item.status %></td>
            <td><%= item.delivery %></td>
            <td><%= link_to 'Show', item %></td>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to 'New Item', new_item_path %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
